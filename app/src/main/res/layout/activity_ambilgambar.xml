<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1E6"
    tools:context=".ambilgambar">

    <ImageView
        android:id="@+id/hasilfoto"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toTopOf="@+id/btnlabelfoto"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnlabelfoto"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginBottom="126dp"
        android:text="Tambahkan informasi"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#070707"
        android:textIsSelectable="false"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:background="#AACC67"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnkembali"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="kembali"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/kembali"
            app:tint="#FBFBFA" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Ambil Gambar"
            android:textColor="#FFFFFF"
            android:typeface="serif" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>